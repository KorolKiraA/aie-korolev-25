# Импорт библиотеки NumPy с общепринятым сокращением
import numpy as np

print("=== 1. СОЗДАНИЕ МАССИВОВ ===")

# Создание массива из обычного списка
array_from_list = np.array([1, 2, 3, 4, 5])
print("Массив из списка:", array_from_list)

# Создание массива с помощью zeros (все элементы 0)
zeros_array = np.zeros(5)
print("Массив zeros:", zeros_array)

# Создание массива с помощью ones (все элементы 1)
ones_array = np.ones(3)
print("Массив ones:", ones_array)

# Создание массива с помощью arange (аналог range)
range_array = np.arange(0, 10, 2)  # от 0 до 10 с шагом 2
print("Массив arange:", range_array)

print("\n=== 2. АТРИБУТЫ МАССИВОВ ===")

# Демонстрация формы и типа данных
matrix = np.array([[1, 2, 3], [4, 5, 6]])
print("Двумерный массив:")
print(matrix)
print("Форма массива (shape):", matrix.shape)
print("Тип данных (dtype):", matrix.dtype)

print("\n=== 3. ИНДЕКСИРОВАНИЕ И СРЕЗЫ ===")

# Создание массива для демонстрации
demo_array = np.array([10, 20, 30, 40, 50, 60, 70])

# Получение отдельного элемента
print("Первый элемент:", demo_array[0])
print("Последний элемент:", demo_array[-1])

# Извлечение подмассива с помощью среза
print("Элементы с 1 по 4:", demo_array[1:5])
print("Каждый второй элемент:", demo_array[::2])

# Индексирование в двумерном массиве
print("Элемент [1,2] в матрице:", matrix[1, 2])
print("Первая строка матрицы:", matrix[0, :])
print("Второй столбец матрицы:", matrix[:, 1])

print("\n=== 4. ВЕКТОРНЫЕ ОПЕРАЦИИ И СТАТИСТИКИ ===")

# Создание двух массивов для операций
a = np.array([1, 2, 3, 4])
b = np.array([5, 6, 7, 8])

# Поэлементное сложение
addition = a + b
print("Сложение a + b:", addition)

# Поэлементное умножение
multiplication = a * b
print("Умножение a * b:", multiplication)

# Вычисление статистик
random_data = np.array([2.5, 1.8, 3.2, 4.1, 2.9])
print("Исходные данные:", random_data)
print("Среднее значение:", np.mean(random_data))
print("Стандартное отклонение:", np.std(random_data))
print("Минимальное значение:", np.min(random_data))
print("Максимальное значение:", np.max(random_data))
print("Сумма всех элементов:", np.sum(random_data))

print("\n=== 5. ДОПОЛНИТЕЛЬНЫЕ ПРИМЕРЫ ===")

# Создание массива случайных чисел
random_array = np.random.randint(1, 100, 10)
print("Массив случайных чисел:", random_array)
print("Отсортированный массив:", np.sort(random_array))

# Изменение формы массива
reshaped = np.arange(12).reshape(3, 4)
print("Исходный массив (3x4):")
print(reshaped)

